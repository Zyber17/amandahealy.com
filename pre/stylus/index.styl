@import 'includes/helper'

body
	background $background
	color $text
	font-family $OpenSans
	font-size $textSize

a
	&:link, &:visited
		color $link
		text-decoration none
	&:hover
		color tint($link,10%)
	&:active
		color shade($link,10%)

#wrapper
	position absolute
	width $maxWidth
	height $maxHeight
	top 50%
	left 50%
	margin (-1*$maxHeight/2) (-1*$maxWidth/2) 
	header
		margin-bottom $textSize
		h1
			font-size $textSize * 1.8
			margin-bottom $textSize * 0.25
			color $hero


		h2
			font-size $textSize * 1.2
			// text-align  justify
	section#social
		ul
			li
				margin-bottom (1/3)*$textSize
				:before
					margin-right (1/3)*$textSize